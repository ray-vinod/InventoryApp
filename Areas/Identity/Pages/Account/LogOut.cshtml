@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <div class="d-flex justify-content-center">
                <form class="form-inline pt-2" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-outline-info text-dark">Click here to Logout</button>
                </form>
            </div>
        }
        else
        {
            <p class="text-center pt-2">You have successfully logged out of the application.</p>
        }
    }
</header>