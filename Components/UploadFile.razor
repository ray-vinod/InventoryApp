@layout MainLayout
@attribute [Authorize(Roles = "SuperAdmin")]

<h3>Choose Files to upload </h3>
<div>
    <div class="col-md-6">
        <InputFile OnChange="OnFileChange" multiple />
        @if (fileInfos.Count > 0)
        {
        <a @onclick="Upload" class="btn btn-outline-info ml-4">
            <span class="oi oi-arrow-circle-top ml-2"></span>Upload
        </a>
        <hr class="mb-4" />
        }
    </div>

</div>

<div class="image-list col-md-2">
    <table class="table">
        @foreach (var image in fileInfos)
        {
        <tr>
            <td>
                <img src="@image.Url" class="mr-4" />
            </td>
            <td>
                <button @onclick="()=>RemoveImage(image)" type="button" class="btn btn-outline-danger">
                    <spanc class="oi oi-minus text-danger"></spanc>
                </button>
                <hr />
            </td>
        </tr>
        }
    </table>
</div>



