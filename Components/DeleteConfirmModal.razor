<div>
    <h4 class="text-center mb-4">Item's Name : @Message</h4>
    @if (ShowInput)
    {
        <div class="form-group">
            <label for="Note">Add Note</label>
            <input @bind="Note" type="text" class="form-control" placeholder="Enter Note text" />
        </div>
    }
    <div class="d-flex">
        <button @onclick="Yes" class="btn btn-primary">Yes</button>
        <button @onclick="No" class="btn btn-secondary ml-auto">No</button>
    </div>
</div>

@code {

    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; }
    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public bool ShowInput { get; set; } = false;
    private string Note { get; set; }

    async Task Yes() => await BlazoredModal.CloseAsync(ModalResult.Ok(Note));
    async Task No() => await BlazoredModal.CancelAsync();

}
