<div style="width:400px;">
    <div class="mb-2">
        <h5 class="card-title">Roles</h5>
        @if (Roles != null)
        {
            <div class="d-md-flex flex-wrap justify-content-between align-item-center">
                @foreach (var role in Roles)
                {
                    if (role.IsSelected)
                    {
                        <span>
                            <input type="checkbox" value="@role.RoleId" name="@role.RoleName" id="@role.RoleId" class="mr-3" @onchange="()=>Checked(role.RoleId)" checked />
                            @role.RoleName
                        </span>
                    }
                    else
                    {
                        <span>
                            <input type="checkbox" value="@role.RoleId" name="@role.RoleName" id="@role.RoleId" class="mr-3" @onchange="()=>Checked(role.RoleId)" />@role.RoleName
                        </span>
                    }
                }
            </div>
        }
    </div>
    <div class="d-flex mb-1">
        <button @onclick="Yes" class="btn btn-primary">Update</button>
        <button @onclick="No" class="btn btn-secondary ml-auto">Cancel</button>
    </div>
</div>

