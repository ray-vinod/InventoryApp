@inherits LayoutComponentBase

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand text-white">CIWEC OT</a>
            <button class="navbar-toggler" @onclick="()=>ToggleNavMenu()">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse @NavMenuCssClass d-sm-inline-flex justify-content-between" @onclick="()=>ToggleNavMenu()">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/" asp-area="">Home</a>
                    </li>
                    <li class="nav-item">
                        <AuthorizeView Roles="SuperAdmin,Admin">
                            <Authorized>
                                <a class="nav-link text-light" href="/dashboard">Dashboard</a>
                            </Authorized>
                        </AuthorizeView>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/aboutus">About Us</a>
                    </li>
                </ul>

                <LoginDisplay />

            </div>
        </div>
    </nav>
</header>

<div class="container" style="font-size:14px;">
    <main role="main" class="pb-3">
        <ToastNotification />
        @Body
    </main>
</div>

